<div id="splash" class="float-container">
  <h1>Registrarse</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'sign-in-form', class: 'devise-form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="input">
      <%= f.label :email, 'Correo electrónico' %>
      <%= f.email_field :email, :autofocus => true %>
    </div>

    <div class="input">
      <%= f.label :password, 'Contraseña' %>
      <%= f.password_field :password %>
    </div>

    <div class="input">
      <%= f.label :password, 'Repite tu contraseña <small>(por motivo de seguridad)</small>'.html_safe %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="input">
      <%= f.submit "Registrarse", class: 'button belize-hole' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>